<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <%= message.body %>
            <br>
        <% end %>
    </div>

    <%= form_for(Message.new) do |f| %>
    <table class="table">
        <tr>
            <th><span class="label label-primary">名前</span></th>
            <td>
                <%= f.text_area :name, :size => "100x1"  %>
            </td>
        </tr>
        <tr>
            <th><span class="label label-primary">内容</span></th>
            <td>
                <%= f.text_area :body, :size => "100x10" %>
            </td>
        </tr>
        <tr>
            <th><span class="label label-primary">投稿</span></th>
            <td>
                <%= f.submit class: "btn btn-sm btn-primary" %>
            </td>
        </tr>
    </table>
    <% end %>
</div>


